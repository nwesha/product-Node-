<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="https://kit.fontawesome.com/6cbb0851b3.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <h1><i class="fas fa-list"></i> Product List</h1>
        <form action="/add-product" method="POST">
            <div class="form-group">
                <input type="text" name="name" placeholder="Product Name" required class="name">
                <input type="number" name="price" placeholder="Product Price" required class="price">
                <button type="submit"><i class="fas fa-plus"></i> Add Product</button>
            </div>
        </form>
        <ul class="product-list">
            <% products.forEach(product => { %>
                <li>
                    <span><i class="fas fa-box"></i> <%= product.name %></span>
                    <span><i class="fa-solid fa-indian-rupee-sign"></i><%= product.price %></span>
                </li>
            <% }); %>
        </ul>
    </div>

</body>
</html>
